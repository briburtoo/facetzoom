{
  "name": "facetzoom",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "vitest",
    "lint": "eslint \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\""
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.19.2",
    "prettier": "^3.3.3",
    "superstruct": "^1.0.4",
    "tslib": "^2.7.0",
    "typescript": "^5.5.4",
    "vitest": "^2.1.1"
  }
}
